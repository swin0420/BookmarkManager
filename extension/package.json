{
  "name": "bookmark-manager-extension",
  "version": "1.0.0",
  "description": "Chrome extension for Twitter/X bookmark export",
  "main": "popup.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "popup.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
